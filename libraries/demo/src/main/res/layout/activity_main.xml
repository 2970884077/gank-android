<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false">

    <com.guuguo.android.lib.widget.ShadowFrameLayout
        android:id="@+id/shadowFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="70dp"
        app:blurShadowRadius="20dp"
        app:cardShadowAlpha="80"
        app:cardShadowColor="#cccccc"
        app:layout_constraintBottom_toTopOf="@+id/roundFlowLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:sfl_cardBackgroundColor="@color/white"
        app:sfl_cardShadowRadiusBL="50dp"
        app:sfl_cardShadowRadiusTR="50dp"
        app:sfl_cardStrokeWidth="0dp"
        app:sfl_cardTriangleAlign="left"
        app:sfl_cardTriangleCubicRadius="5dp"
        app:sfl_cardTriangleHeight="16dp"
        app:sfl_cardTriangleStartExtent="0dp"
        app:sfl_cardTriangleWidth="20dp">

        <FrameLayout
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="100dp" />
    </com.guuguo.android.lib.widget.ShadowFrameLayout>

    <top.guuguo.myapplication.RoundFlowLayout
        android:id="@+id/roundFlowLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="135dp"
        android:orientation="vertical"
        android:padding="20dp"
        app:columnNumbers="0"
        app:divideSpace="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shadowFrameLayout"
        app:rv_backgroundColor="?containerBackgroundLayer2"
        app:rv_cornerRadius="3dp"
        app:rv_strokeColor="@color/black20"
        app:rv_strokeWidth="1px"
        tools:context="top.guuguo.myapplication.ui.activity.MainActivity">

        <com.guuguo.android.lib.widget.roundview.RoundTextView
            android:id="@+id/v_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="主题"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:rv_backgroundColor="@color/color_green"
            app:rv_cornerRadius="3dp" />

        <com.guuguo.android.lib.widget.roundview.RoundTextView
            android:id="@+id/v_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="10dp"
            android:text="ProgressView"
            android:textColor="@color/black80"
            android:textSize="16sp"
            app:rv_backgroundColor="@color/migray"
            app:rv_backgroundPressColor="@color/colorPrimary"
            app:rv_cornerRadius="3dp"
            app:rv_strokeColor="@color/black20"
            app:rv_strokePressColor="@color/black20"
            app:rv_strokeWidth="1px"
            app:rv_textPressColor="@color/colorPrimary" />

        <com.guuguo.android.lib.widget.roundview.RoundTextView
            android:id="@+id/v_flowlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="FlowLayout"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:rv_backgroundColor="@color/color_red_ccfa3c55"
            app:rv_backgroundPressColor="@color/colorPrimary"
            app:rv_cornerRadius="3dp"
            app:rv_isRippleEnable="true"
            app:rv_strokeColor="@color/black20"
            app:rv_strokePressColor="@color/black20"
            app:rv_strokeWidth="1px"
            app:rv_textPressColor="@color/colorPrimary" />

        <com.guuguo.android.lib.widget.roundview.RoundTextView
            android:id="@+id/v_swip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="SwipeNavigationLayout"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:rv_backgroundColor="@color/color_red_ccfa3c55"
            app:rv_backgroundPressColor="@color/colorPrimary"
            app:rv_cornerRadius="3dp"
            app:rv_isRippleEnable="true"
            app:rv_strokeColor="@color/black20"
            app:rv_strokePressColor="@color/black20"
            app:rv_strokeWidth="1px"
            app:rv_textPressColor="@color/colorPrimary" />
        <!--<com.guuguo.android.lib.widget.roundview.RoundTextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:padding="10dp"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/v_state"-->
        <!--android:gravity="center"-->
        <!--android:text="状态"-->
        <!--android:textColor="@color/white"-->
        <!--android:textSize="16sp"-->
        <!--app:rv_isRippleEnable="true"-->
        <!--app:rv_backgroundColor="@color/color_red_ccfa3c55"-->
        <!--app:rv_backgroundPressColor="@color/colorPrimary"-->
        <!--app:rv_cornerRadius="3dp"-->
        <!--app:rv_strokeColor="@color/black20"-->
        <!--app:rv_strokePressColor="@color/black20"-->
        <!--app:rv_strokeWidth="1px"-->
        <!--app:rv_textPressColor="@color/colorPrimary" />-->
        <com.guuguo.android.lib.widget.roundview.RoundTextView
            android:id="@+id/v_wave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="WaveView"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:rv_backgroundColor="@color/colorPrimaryBlue"
            app:rv_backgroundPressColor="@color/colorPrimary"
            app:rv_cornerRadius="3dp"
            app:rv_isRippleEnable="true"
            app:rv_strokeColor="@color/black20"
            app:rv_strokePressColor="@color/black20"
            app:rv_strokeWidth="1px"
            app:rv_textPressColor="@color/colorPrimary" />

        <com.guuguo.android.lib.widget.roundview.RoundTextView
            android:id="@+id/v_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="dialog"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:rv_backgroundColor="@color/colorPrimaryBlue"
            app:rv_cornerRadius="3dp"
            app:rv_isRippleEnable="true"
            app:rv_strokeColor="@color/black20"
            app:rv_strokeWidth="1px"
            app:rv_textPressColor="@color/colorPrimary" />

        <com.guuguo.android.lib.widget.roundview.RoundTextView
            android:id="@+id/v_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="测试"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:rv_backgroundColor="@color/colorPrimaryBlue"
            app:rv_cornerRadius="3dp"
            app:rv_isRippleEnable="true"
            app:rv_strokeColor="@color/black20"
            app:rv_strokeWidth="1px"
            app:rv_textPressColor="@color/colorPrimary" />

        <com.guuguo.android.lib.widget.roundview.RoundTextView
            android:id="@+id/v_guild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="引导"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:rv_backgroundColor="@color/colorPrimaryBlue"
            app:rv_cornerRadius="3dp"
            app:rv_isRippleEnable="true"
            app:rv_strokeColor="@color/black20"
            app:rv_strokeWidth="1px"
            app:rv_textPressColor="@color/colorPrimary" />
    </top.guuguo.myapplication.RoundFlowLayout>
</androidx.constraintlayout.widget.ConstraintLayout>