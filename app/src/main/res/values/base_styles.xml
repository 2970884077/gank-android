<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.FullScreen" parent="Theme.AppCompat.NoActionBar" />

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CollapsingToolbarTitleStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/transparent</item>
    </style>
    
    <style name="Widget.Design.AppBarLayout" parent="android:Widget">
        <item name="elevation">0dp</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="text_item_title">
        <item name="android:textColor">?myTitleTextColor</item>
        <item name="android:textSize">@dimen/title_item</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_level1_title">
        <item name="android:textColor">?myTitleTextColor</item>
        <item name="android:textSize">@dimen/title1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_level2_title">
        <item name="android:textColor">?myTitleTextColor</item>
        <item name="android:textSize">@dimen/title2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_hint">
        <item name="android:textColor">?android:textColorHint</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="text_link">
        <item name="android:textColor">?android:textColorLink</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="under_line">
        <item name="android:background">@color/black20</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>
