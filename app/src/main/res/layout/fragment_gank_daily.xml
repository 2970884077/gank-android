<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.guuguo.gank.app.gank.viewmodel.GankDailyViewModel" />
    </data>

    <com.guuguo.android.lib.widget.VerticalSwipeRefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/day_main_base_bg"
        tools:context=".app.gank.fragment.GankDailyFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:paddingLeft="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="10dp"
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            tools:listitem="@layout/item_meizi" />
    </com.guuguo.android.lib.widget.VerticalSwipeRefreshLayout>
</layout>