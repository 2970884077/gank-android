<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    package="com.guuguo.gank">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_LOGS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <application xmlns:tools="http://schemas.android.com/tools"
        android:name="com.guuguo.gank.app.App"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyTheme.day.background"
        tools:replace="android:appComponentFactory"
        android:networkSecurityConfig="@xml/network_security_config"
        android:appComponentFactory="whateverString"
        tools:ignore="GoogleAppIndexingWarning"
       >
        <activity
            android:name="com.guuguo.gank.app.gank.activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.guuguo.gank.app.gank.activity.GankActivity" />
        <activity android:name="com.guuguo.gank.app.gank.activity.WebViewActivity" />
        <activity android:name=".app.gank.fragment.SearchActivity" />
        <activity android:name="com.guuguo.gank.app.gank.activity.AboutActivity" />
        <!-- bugly -->
        <activity
            android:name="com.tencent.bugly.beta.ui.BetaActivity"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name="com.guuguo.gank.app.gank.activity.UpgradeActivity"
            android:theme="@android:style/Theme.Translucent" />

    </application>

</manifest>